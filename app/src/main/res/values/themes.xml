<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomTheme"
        parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@drawable/general_background</item>
        <item name="android:textColor">@drawable/general_text_color</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/actionbar_background</item>
    </style>

    <style name="MyListView"
        parent="android:Widget.Holo.ListView">
        <item name="android:background">@drawable/general_background</item>
    </style>

    <drawable name="actionbar_background">@android:color/white</drawable>
    <drawable name="general_background">@android:color/white</drawable>
    <drawable name="general_text_color">@android:color/black</drawable>
</resources>